<div class="space-y-3">
  <h1 class="text-2xl font-bold">List of Rooms</h1>
  <ul class="list-disc ps-4">
    <% @rooms.each do |room| %>
      <li class="flex gap-3 my-3">
			<span><%= room.name %></span>
			<%= link_to "Show", room, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold px-2 rounded" %>
			<%= link_to "Edit", edit_room_path(room), class: "bg-yellow-500 hover:bg-yellow-700 text-white font-bold px-2 rounded" %>
			<%= button_to "Delete", room, method: :delete, data: { confirm: "Are you sure?" }, class: "bg-red-500 hover:bg-red-700 text-white font-bold px-2 rounded" %>
			</li>
    <% end %>
  </ul>
	<%= link_to "Create Room", new_room_path, class: "inline-block bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
</div>