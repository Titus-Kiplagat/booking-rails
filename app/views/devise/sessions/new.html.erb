<div class="space-y-3">
  <h2 class="text-4xl font-bold">Log in</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="mb-3 field">
      <%= f.label :email, class: "text-gray-700 text-sm font-bold" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
    <div class="mb-3 field">
      <%= f.label :password, class: "text-gray-700 text-sm font-bold" %><br />
      <%= f.password_field :password, autocomplete: "current-password" %>
    </div>
    <% if devise_mapping.rememberable? %>
      <div class="flex items-center gap-3 mb-3 field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>
    <div class="mb-3 actions">
      <%= f.submit "Log in", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold px-4 py-1 rounded" %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
